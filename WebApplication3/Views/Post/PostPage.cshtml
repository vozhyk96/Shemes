@using Microsoft.AspNet.Identity
@model WebApplication3.ViewPost
@{
    ViewBag.Title = "PostPage";
}

<h2>Пост</h2>
<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Автор:</dt>
        <dd>
            @Model.UserEmail
        </dd>
        <dt>Заголовок:</dt>
        <dd>
            @Model.post.title
        </dd>
        <dt>Тема:</dt>
        <dd>
            @Model.post.teme
        </dd>
        <dt>Тэги:</dt>
        <dd>
            @Model.post.tags
        </dd>
        <dt>Описание:</dt>
        <dd>
            @Model.post.description
        </dd>
        <dt>Рейтинг:</dt>
        <dd>
            @Model.post.rating.ToString()
        </dd>
        <dt>Дата создания:</dt>
        <dd>
            @Model.post.time
        </dd>
        
    </dl>
</div>
@if (Model.post.UserId == User.Identity.GetUserId())
{
    using (Html.BeginForm("CreatePost", "Post",FormMethod.Get))
    {
        <input type="hidden" name="id" value=@Model.post.id />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input id="ButtonChange" type="submit" class="btn btn-default" value="Отредактировать пост" />
            </div>
        </div>
    }
}

